@{
    const string prefix = "passenger-distribution-by-agency-bar-chart";
    const string hideCardAttributeName = "Reports.HidePassengerDistributionByAgencyBarChartCard";
    var hideCard = await genericAttributeService.GetAttributeAsync<bool>(await workContext.GetCurrentCustomerAsync(), hideCardAttributeName);
}

<script src="~/lib_npm/chart.js/chart.umd.min.js"></script>

<div class="card card-primary card-outline @if (hideCard){<text>collapsed-card</text>}" id="@(prefix)-card">
    <div class="card-header with-border">
        <h3 class="card-title">
            <i class="fas fa-chart-bar"></i>
            @T("Admin.Reports.Passengers.DistributionByAgency")
        </h3>
        <div class="card-tools float-right">
            <div class="input-group input-group-sm" style="width: 220px;">
                <div class="input-group-prepend">
                    <span class="input-group-text">@T("Admin.Configuration.Cities")</span>
                </div>
                <select id="@(prefix)-city" class="form-control" @if (hideCard) { <text> disabled="disabled" </text> }></select>
            </div>
            <button type="button" class="btn btn-tool margin-l-10" data-card-widget="collapse">
                @if (hideCard)
                {
                    <text><i class="fas fa-plus"></i></text>
                }
                else
                {
                    <text><i class="fas fa-minus"></i></text>
                }
            </button>
        </div>
    </div>
    <div class="card-body">
        <div class="chart" style="height: 300px;">
            <canvas id="@(prefix)-chart" height="300"></canvas>
        </div>
    </div>
</div>

<script>
    $(function() {
        var selectedCityId;

        $('#@(prefix)-card').on('click', 'button[data-card-widget="collapse"]', function () {
            var collapsed = !$('#@(prefix)-card').hasClass('collapsed-card');
            saveUserPreferences('@(Url.Action("SavePreference", "Preferences"))', '@hideCardAttributeName', collapsed);
            
            if (!collapsed) {
                $('#@(prefix)-city').removeAttr('disabled');
                if (!selectedCityId) {
                    loadCitiesAndChart();
                }
            } else {
                $('#@(prefix)-city').attr('disabled', 'disabled');
            }
        });

        var dataLabelsPlugin = {
            id: 'dataLabelsPlugin',
            afterDatasetsDraw: function(chart) {
                var ctx = chart.ctx;
                chart.data.datasets.forEach(function(dataset, i) {
                    var meta = chart.getDatasetMeta(i);
                    if (meta.hidden) return;
                    meta.data.forEach(function(bar, index) {
                        var val = dataset.data[index];
                        if (!val) return;
                        ctx.save();
                        ctx.fillStyle = '#333';
                        ctx.font = '11px Tahoma, Arial';
                        ctx.textAlign = 'center';
                        ctx.textBaseline = 'bottom';
                        ctx.fillText(val.toString(), bar.x, bar.y - 4);
                        ctx.restore();
                    });
                });
            }
        };

        var barConfig = {
            type: 'bar',
            data: {
                labels: [],
                datasets: [{
                    label: "@T("Admin.Reports.Passengers.DistributionByAgency.Label")",
                    data: [],
                    backgroundColor: 'rgba(54, 162, 235, 0.8)',
                    borderColor: 'rgba(54, 162, 235, 1)',
                    borderWidth: 1
                }]
            },
            plugins: [dataLabelsPlugin],
            options: {
                responsive: true,
                maintainAspectRatio: false,
                layout: { padding: { top: 25 } },
                plugins: {
                    legend: {
                        display: false
                    },
                    tooltip: {
                        callbacks: {
                            label: function(context) {
                                return context.parsed.y + ' ' + '@T("Admin.Reports.Passengers.Person")';
                            }
                        }
                    }
                },
                scales: {
                    x: {
                        display: true,
                        grid: {
                            display: false
                        },
                        ticks: {
                            maxRotation: 45,
                            minRotation: 45
                        }
                    },
                    y: {
                        display: true,
                        beginAtZero: true,
                        grid: {
                            display: true,
                            color: 'rgba(0,0,0,.05)',
                            lineWidth: 1
                        },
                        ticks: {
                            stepSize: 1
                        }
                    }
                }
            }
        };

        function changeBarChartCity(cityId) {
            var labels = [];
            var values = [];

            $.ajax({
                cache: false,
                type: "GET",
                url: "@Url.Action("LoadPassengerDistributionByAgency", "Home")",
                data: {
                    cityId: cityId
                },
                success: function (data, textStatus, jqXHR) {
                    if (data && data.length > 0) {
                        for (var i = 0; i < data.length; i++) {
                            labels.push(data[i].agencyName);
                            values.push(data[i].count);
                        }
                    } else {
                        labels = [];
                        values = [];
                    }

                    if (!window.passengerDistributionByAgencyBarChart) {
                        barConfig.data.labels = labels;
                        barConfig.data.datasets[0].data = values;
                        window.passengerDistributionByAgencyBarChart = new Chart(
                            document.getElementById("@prefix-chart").getContext("2d"),
                            barConfig
                        );
                    } else {
                        window.passengerDistributionByAgencyBarChart.config.data.labels = labels;
                        window.passengerDistributionByAgencyBarChart.config.data.datasets[0].data = values;
                        window.passengerDistributionByAgencyBarChart.update();
                    }
                },
                error: function (jqXHR, textStatus, errorThrown) {
                    labels = [];
                    values = [];
                    
                    if (!window.passengerDistributionByAgencyBarChart) {
                        barConfig.data.labels = labels;
                        barConfig.data.datasets[0].data = values;
                        window.passengerDistributionByAgencyBarChart = new Chart(
                            document.getElementById("@prefix-chart").getContext("2d"),
                            barConfig
                        );
                    } else {
                        window.passengerDistributionByAgencyBarChart.config.data.labels = labels;
                        window.passengerDistributionByAgencyBarChart.config.data.datasets[0].data = values;
                        window.passengerDistributionByAgencyBarChart.update();
                    }
                }
            });
        }

        function loadCitiesAndChart() {
            $.ajax({
                cache: false,
                type: "GET",
                url: "@Url.Action("LoadPassengerDistributionCities", "Home")",
                success: function (data) {
                    var $select = $('#@(prefix)-city');
                    $select.empty();
                    $select.append($('<option></option>').attr('value', '0').text('@T("Admin.Common.Select")'));

                    if (data && data.length > 0) {
                        for (var i = 0; i < data.length; i++) {
                            $select.append($('<option></option>').attr('value', data[i].id).text(data[i].name));
                        }
                    }

                    var defaultCityId = 4;
                    if ($select.find('option[value="' + defaultCityId + '"]').length) {
                        $select.val(defaultCityId);
                    }

                    if ($select.val() && $select.val() !== '0') {
                        selectedCityId = parseInt($select.val());
                        changeBarChartCity(selectedCityId);
                    }
                }
            });
        }
        $('#@(prefix)-city').on('change', function () {
            var cityId = parseInt($(this).val());
            selectedCityId = cityId;
            if (cityId > 0) {
                changeBarChartCity(cityId);
            } else if (window.passengerDistributionByAgencyBarChart) {
                window.passengerDistributionByAgencyBarChart.config.data.labels = [];
                window.passengerDistributionByAgencyBarChart.config.data.datasets[0].data = [];
                window.passengerDistributionByAgencyBarChart.update();
            }
        });

        @if (!hideCard)
        {
            <text>
                loadCitiesAndChart();
            </text>
        }
    });
</script>

