@{
    const string prefix = "order-status-pie-chart";
    const string hideCardAttributeName = "Reports.HideOrderStatusPieChartCard";
    var hideCard = await genericAttributeService.GetAttributeAsync<bool>(await workContext.GetCurrentCustomerAsync(), hideCardAttributeName);
}

<script src="~/lib_npm/chart.js/chart.umd.min.js"></script>

<div class="card card-primary card-outline @if (hideCard){<text>collapsed-card</text>}" id="@(prefix)-card">
    <div class="card-header with-border">
        <h3 class="card-title">
            <i class="fas fa-chart-pie"></i>
            @T("Admin.Reports.Sales.OrderStatusDistribution")
        </h3>
        <div class="card-tools float-right">
            <button type="button" class="btn btn-tool margin-l-10" data-card-widget="collapse">
                @if (hideCard)
                {
                    <text><i class="fas fa-plus"></i></text>
                }
                else
                {
                    <text><i class="fas fa-minus"></i></text>
                }
            </button>
        </div>
    </div>
    <div class="card-body">
        <div class="chart" style="height: 300px;">
            <canvas id="@(prefix)-chart" height="300"></canvas>
        </div>
    </div>
</div>

<script>
    $(function() {
        $('#@(prefix)-card').on('click', 'button[data-card-widget="collapse"]', function () {
            var collapsed = !$('#@(prefix)-card').hasClass('collapsed-card');
            saveUserPreferences('@(Url.Action("SavePreference", "Preferences"))', '@hideCardAttributeName', collapsed);
            
            if (!collapsed && !window.orderStatusPieChart) {
                loadOrderStatusPieChart();
            }
        });

        var pieConfig = {
            type: 'pie',
            data: {
                labels: [],
                datasets: [{
                    data: [],
                    backgroundColor: [
                        'rgba(255, 99, 132, 0.8)',
                        'rgba(54, 162, 235, 0.8)',
                        'rgba(255, 206, 86, 0.8)',
                        'rgba(75, 192, 192, 0.8)',
                        'rgba(153, 102, 255, 0.8)',
                        'rgba(255, 159, 64, 0.8)',
                        'rgba(199, 199, 199, 0.8)',
                        'rgba(83, 102, 255, 0.8)',
                        'rgba(255, 99, 255, 0.8)',
                        'rgba(99, 255, 132, 0.8)'
                    ],
                    borderColor: [
                        'rgba(255, 99, 132, 1)',
                        'rgba(54, 162, 235, 1)',
                        'rgba(255, 206, 86, 1)',
                        'rgba(75, 192, 192, 1)',
                        'rgba(153, 102, 255, 1)',
                        'rgba(255, 159, 64, 1)',
                        'rgba(199, 199, 199, 1)',
                        'rgba(83, 102, 255, 1)',
                        'rgba(255, 99, 255, 1)',
                        'rgba(99, 255, 132, 1)'
                    ],
                    borderWidth: 2
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        position: 'right',
                        labels: {
                            padding: 15,
                            usePointStyle: true
                        }
                    },
                    tooltip: {
                        callbacks: {
                            label: function(context) {
                                let label = context.label || '';
                                if (label) {
                                    label += ': ';
                                }
                                const total = context.dataset.data.reduce((a, b) => a + b, 0);
                                const percentage = ((context.parsed / total) * 100).toFixed(1);
                                label += context.parsed + ' (' + percentage + '%)';
                                return label;
                            }
                        }
                    }
                }
            }
        };

        function loadOrderStatusPieChart() {
            $.ajax({
                cache: false,
                type: "GET",
                url: "@Url.Action("LoadOrderStatusStatistics", "Order")",
                success: function (data, textStatus, jqXHR) {
                    var labels = [];
                    var values = [];

                    if (data && data.length > 0) {
                        for (var i = 0; i < data.length; i++) {
                            labels.push(data[i].statusName);
                            values.push(data[i].count);
                        }
                    } else {
                        // Sample data if no data available
                        labels = ['Pending', 'Processing', 'Complete', 'Cancelled'];
                        values = [10, 25, 50, 5];
                    }

                    pieConfig.data.labels = labels;
                    pieConfig.data.datasets[0].data = values;

                    if (!window.orderStatusPieChart) {
                        window.orderStatusPieChart = new Chart(
                            document.getElementById("@prefix-chart").getContext("2d"),
                            pieConfig
                        );
                    } else {
                        window.orderStatusPieChart.config.data.labels = labels;
                        window.orderStatusPieChart.config.data.datasets[0].data = values;
                        window.orderStatusPieChart.update();
                    }
                },
                error: function (jqXHR, textStatus, errorThrown) {
                    // Use sample data on error
                    pieConfig.data.labels = ['Pending', 'Processing', 'Complete', 'Cancelled'];
                    pieConfig.data.datasets[0].data = [10, 25, 50, 5];
                    
                    if (!window.orderStatusPieChart) {
                        window.orderStatusPieChart = new Chart(
                            document.getElementById("@prefix-chart").getContext("2d"),
                            pieConfig
                        );
                    }
                }
            });
        }

        @if (!hideCard)
        {
            <text>
                loadOrderStatusPieChart();
            </text>
        }
    });
</script>

