@{
    const string prefix = "passenger-marital-status-bar-chart";
    const string hideCardAttributeName = "Reports.HidePassengerMaritalStatusBarChartCard";
    var hideCard = await genericAttributeService.GetAttributeAsync<bool>(await workContext.GetCurrentCustomerAsync(), hideCardAttributeName);
}

<script src="~/lib_npm/chart.js/chart.umd.min.js"></script>

<div class="card card-primary card-outline @if (hideCard){<text>collapsed-card</text>}" id="@(prefix)-card">
    <div class="card-header with-border">
        <h3 class="card-title">
            <i class="fas fa-chart-bar"></i>
            @T("Admin.Reports.Passengers.MaritalStatusStatistics")
        </h3>
        <div class="card-tools float-right">
            <button type="button" class="btn btn-tool margin-l-10" data-card-widget="collapse">
                @if (hideCard)
                {
                    <text><i class="fas fa-plus"></i></text>
                }
                else
                {
                    <text><i class="fas fa-minus"></i></text>
                }
            </button>
        </div>
    </div>
    <div class="card-body">
        <div class="chart" style="height: 300px;">
            <canvas id="@(prefix)-chart" height="300"></canvas>
        </div>
    </div>
</div>

<script>
    $(function() {
        $('#@(prefix)-card').on('click', 'button[data-card-widget="collapse"]', function () {
            var collapsed = !$('#@(prefix)-card').hasClass('collapsed-card');
            saveUserPreferences('@(Url.Action("SavePreference", "Preferences"))', '@hideCardAttributeName', collapsed);

            if (!collapsed && !window.passengerMaritalStatusBarChart) {
                loadMaritalStatusChart();
            }
        });

        var dataLabelsPlugin = {
            id: 'dataLabelsPlugin',
            afterDatasetsDraw: function(chart) {
                var ctx = chart.ctx;
                var total = 0;
                chart.data.datasets[0].data.forEach(function(v) { total += (v || 0); });
                chart.data.datasets.forEach(function(dataset, i) {
                    var meta = chart.getDatasetMeta(i);
                    if (meta.hidden) return;
                    meta.data.forEach(function(bar, index) {
                        var val = dataset.data[index];
                        if (!val) return;
                        var pct = total > 0 ? Math.round(val / total * 100) : 0;
                        var label = val + ' (' + pct + '%)';
                        ctx.save();
                        ctx.fillStyle = '#333';
                        ctx.font = '11px Tahoma, Arial';
                        ctx.textAlign = 'center';
                        ctx.textBaseline = 'bottom';
                        ctx.fillText(label, bar.x, bar.y - 4);
                        ctx.restore();
                    });
                });
            }
        };

        var barConfig = {
            type: 'bar',
            data: {
                labels: [],
                datasets: [{
                    data: [],
                    backgroundColor: [
                        'rgba(54, 162, 235, 0.8)',
                        'rgba(255, 99, 132, 0.8)'
                    ],
                    borderColor: [
                        'rgba(54, 162, 235, 1)',
                        'rgba(255, 99, 132, 1)'
                    ],
                    borderWidth: 1
                }]
            },
            plugins: [dataLabelsPlugin],
            options: {
                responsive: true,
                maintainAspectRatio: false,
                layout: { padding: { top: 25 } },
                plugins: {
                    legend: {
                        display: false
                    },
                    tooltip: {
                        callbacks: {
                            label: function(context) {
                                return context.parsed.y + ' ' + '@T("Admin.Reports.Passengers.Person")';
                            }
                        }
                    }
                },
                scales: {
                    x: {
                        display: true,
                        grid: {
                            display: false
                        }
                    },
                    y: {
                        display: true,
                        beginAtZero: true,
                        grid: {
                            display: true,
                            color: 'rgba(0,0,0,.05)',
                            lineWidth: 1
                        },
                        ticks: {
                            stepSize: 1
                        }
                    }
                }
            }
        };

        function loadMaritalStatusChart() {
            $.ajax({
                cache: false,
                type: "GET",
                url: "@Url.Action("LoadPassengerMaritalStatusStatistics", "Home")",
                success: function (data) {
                    var labels = [];
                    var values = [];

                    if (data && data.length > 0) {
                        for (var i = 0; i < data.length; i++) {
                            labels.push(data[i].label);
                            values.push(data[i].count);
                        }
                    }

                    barConfig.data.labels = labels;
                    barConfig.data.datasets[0].data = values;

                    if (!window.passengerMaritalStatusBarChart) {
                        window.passengerMaritalStatusBarChart = new Chart(
                            document.getElementById("@prefix-chart").getContext("2d"),
                            barConfig
                        );
                    } else {
                        window.passengerMaritalStatusBarChart.config.data.labels = labels;
                        window.passengerMaritalStatusBarChart.config.data.datasets[0].data = values;
                        window.passengerMaritalStatusBarChart.update();
                    }
                }
            });
        }

        @if (!hideCard)
        {
            <text>
                loadMaritalStatusChart();
            </text>
        }
    });
</script>
