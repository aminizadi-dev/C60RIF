@model PassengerSearchModel

@{
    //page title
    ViewBag.PageTitle = T("Admin.Passengers.Passengers").Text;
    //active menu item (system name)
    NopHtml.SetActiveMenuItemSystemName("Passengers list");
}

@{
    const string hideSearchBlockAttributeName = "PassengerListPage.HideSearchBlock";
    var hideSearchBlock = await genericAttributeService.GetAttributeAsync<bool>(await workContext.GetCurrentCustomerAsync(), hideSearchBlockAttributeName);
}

<style>
    #passengers-grid_wrapper th {
        text-align: right !important;
    }

    .persian-date-hint {
        display:none;
    }

</style>
<form asp-controller="Passenger" asp-action="List" method="post">
    <div class="content-header clearfix">
        <h1 class="float-left">
            @T("Admin.Passengers.Passengers")
        </h1>
        <div class="float-right">
            <div class="btn-group">
                <button type="button" class="btn btn-success">
                    <i class="fas fa-download"></i>
                    @T("Admin.Common.Export")
                </button>
                <button type="button" class="btn btn-success dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                    <span class="caret"></span>
                    <span class="sr-only">&nbsp;</span>
                </button>
                <ul class="dropdown-menu" role="menu">
                    <li class="dropdown-item">
                        <button asp-action="ExportExcel" type="submit" name="exportexcel-all">
                            <i class="far fa-file-excel"></i>
                            @T("Admin.Common.ExportToExcel.All")
                        </button>
                    </li>
                    <li class="dropdown-item">
                        <button type="button" id="exportexcel-selected">
                            <i class="far fa-file-excel"></i>
                            @T("Admin.Common.ExportToExcel.Selected")
                        </button>
                    </li>
                </ul>
            </div>
            <a asp-action="Create" class="btn btn-primary">
                <i class="fas fa-square-plus"></i>
                @T("Admin.Common.AddNew")
            </a>
            @await Component.InvokeAsync(typeof(AdminWidgetViewComponent), new { widgetZone = AdminWidgetZones.PassengerListButtons, additionalData = Model })
        </div>
    </div>

    <section class="content">
        <div class="container-fluid">
            <div class="form-horizontal">
                <div class="cards-group">
                    <div class="card card-default card-search">
                        <div class="card-body">
                            <div class="row search-row @(!hideSearchBlock ? "opened" : "")" data-hideAttribute="@hideSearchBlockAttributeName">
                                <div class="search-text">@T("Admin.Common.Search")</div>
                                <div class="icon-search"><i class="fas fa-magnifying-glass" aria-hidden="true"></i></div>
                                <div class="icon-collapse"><i class="far fa-angle-@(!hideSearchBlock ? "up" : "down")" aria-hidden="true"></i></div>
                            </div>
                            <div class="search-body @(hideSearchBlock ? "closed" : "")">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group row">
                                            <div class="col-md-4">
                                                <nop-label asp-for="SearchRecoveryNo" />
                                            </div>
                                            <div class="col-md-8">
                                                <nop-editor asp-for="SearchRecoveryNo" />
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group row">
                                            <div class="col-md-4">
                                                <nop-label asp-for="SearchCardNo" />
                                            </div>
                                            <div class="col-md-8">
                                                <nop-editor asp-for="SearchCardNo" />
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group row">
                                            <div class="col-md-4">
                                                <nop-label asp-for="SearchPersonName" />
                                            </div>
                                            <div class="col-md-8">
                                                <nop-editor asp-for="SearchPersonName" />
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group row">
                                            <div class="col-md-4">
                                                <nop-label asp-for="SearchGuideNameAndLegionNo" />
                                            </div>
                                            <div class="col-md-8">
                                                <nop-editor asp-for="SearchGuideNameAndLegionNo" />
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group row">
                                            <div class="col-md-4">
                                                <nop-label asp-for="SearchCityId" />
                                            </div>
                                            <div class="col-md-8">
                                                <nop-select asp-for="SearchCityId" asp-items="Model.AvailableCities" />
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group row">
                                            <div class="col-md-4">
                                                <nop-label asp-for="SearchAgencyId" />
                                            </div>
                                            <div class="col-md-8">
                                                <nop-select asp-for="SearchAgencyId" asp-items="Model.AvailableAgencies" />
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group row">
                                            <div class="col-md-4">
                                                <nop-label asp-for="SearchClinicId" />
                                            </div>
                                            <div class="col-md-8">
                                                <nop-select asp-for="SearchClinicId" asp-items="Model.AvailableClinics" />
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group row">
                                            <div class="col-md-4">
                                                <nop-label asp-for="SearchTravelStartDateUtc" />
                                            </div>
                                            <div class="col-md-8">
                                                <nop-editor asp-for="SearchTravelStartDateUtc" />
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group row">
                                            <div class="col-md-4">
                                                <nop-label asp-for="SearchTravelEndDateUtc" />
                                            </div>
                                            <div class="col-md-8">
                                                <nop-editor asp-for="SearchTravelEndDateUtc" />
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group row">
                                            <div class="col-md-4">
                                                <nop-label asp-for="SearchRecoveryYear" />
                                            </div>
                                            <div class="col-md-8">
                                                <nop-select asp-for="SearchRecoveryYear" asp-items="Model.AvailableRecoveryYears" />
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group row">
                                            <div class="col-md-4">
                                                <nop-label asp-for="SearchRecoveryMonth" />
                                            </div>
                                            <div class="col-md-8">
                                                <nop-select asp-for="SearchRecoveryMonth" asp-items="Model.AvailableRecoveryMonths" />
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="text-center col-12">
                                        <button type="button" id="search-passengers" class="btn btn-primary btn-search">
                                            <i class="fas fa-magnifying-glass"></i>
                                            @T("Admin.Common.Search")
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="card card-default">
                        <div class="card-body">
                            @{
                                var gridModel = new DataTablesModel
                                {
                                    Name = "passengers-grid",
                                    UrlRead = new DataUrl("PassengerList", "Passenger", null),
                                    SearchButtonId = "search-passengers",
                                    Length = Model.PageSize,
                                    LengthMenu = Model.AvailablePageSizes,
                                    Filters = new List<FilterParameter>
                                                        {
                                                        new FilterParameter(nameof(Model.SearchRecoveryNo)),
                                                        new FilterParameter(nameof(Model.SearchPersonName)),
                                                        new FilterParameter(nameof(Model.SearchCityId)),
                                                        new FilterParameter(nameof(Model.SearchAgencyId)),
                                                        new FilterParameter(nameof(Model.SearchClinicId)),
                                                        new FilterParameter(nameof(Model.SearchAntiXId)),
                                                        new FilterParameter(nameof(Model.SearchGuideNameAndLegionNo)),
                                                        new FilterParameter(nameof(Model.SearchCardNo)),
                                                        new FilterParameter(nameof(Model.SearchTravelStartDateUtc)),
                                                        new FilterParameter(nameof(Model.SearchTravelEndDateUtc)),
                                                        new FilterParameter(nameof(Model.SearchRecoveryYear)),
                                                        new FilterParameter(nameof(Model.SearchRecoveryMonth)),
                                                        }
                                };

                                gridModel.ColumnCollection.Add(new ColumnProperty(nameof(PassengerModel.Id))
                                {
                                    IsMasterCheckBox = true,
                                    Render = new RenderCheckBox("checkbox_passengers"),
                                    ClassName = NopColumnClassDefaults.CenterAll,
                                    Width = "30"
                                });
                                gridModel.ColumnCollection.Add(new ColumnProperty(nameof(PassengerModel.RecoveryNo))
                                {
                                    Title = T("Admin.Passengers.Fields.RecoveryNo").Text
                                });
                                gridModel.ColumnCollection.Add(new ColumnProperty(nameof(PassengerModel.PersonName))
                                {
                                    Title = T("Admin.Passengers.Fields.PersonName").Text
                                });
                                gridModel.ColumnCollection.Add(new ColumnProperty(nameof(PassengerModel.AgencyName))
                                {
                                    Title = T("Admin.Passengers.Fields.Agency").Text
                                });
                                gridModel.ColumnCollection.Add(new ColumnProperty(nameof(PassengerModel.GuideNameAndLegionNo))
                                {
                                    Title = T("Admin.Passengers.Fields.GuideNameAndLegionNo").Text
                                });
                                gridModel.ColumnCollection.Add(new ColumnProperty(nameof(PassengerModel.StartDateOnPersian))
                                {
                                    Title = T("Admin.Passengers.Fields.TravelStartDate").Text
                                });
                                gridModel.ColumnCollection.Add(new ColumnProperty(nameof(PassengerModel.EndDateOnPersian))
                                {
                                    Title = T("Admin.Passengers.Fields.TravelEndDate").Text
                                });
                                gridModel.ColumnCollection.Add(new ColumnProperty(nameof(PassengerModel.BirthYear))
                                {
                                    Title = T("Admin.Passengers.Fields.BirthYear").Text
                                });
                                gridModel.ColumnCollection.Add(new ColumnProperty(nameof(PassengerModel.CardNo))
                                {
                                    Title = T("Admin.Passengers.Fields.CardNo").Text
                                });
                                gridModel.ColumnCollection.Add(new ColumnProperty(nameof(PassengerModel.PictureUrl))
                                {
                                    Title = T("Admin.Passengers.Fields.PictureId").Text,
                                    Width = "50",
                                    ClassName = NopColumnClassDefaults.CenterAll,
                                    Render = new RenderCustom("renderPassengerPicture")
                                });
                                gridModel.ColumnCollection.Add(new ColumnProperty(nameof(PassengerModel.IsMarried))
                                {
                                    Title = T("Admin.Passengers.Fields.IsMarried").Text,
                                    Width = "50",
                                    ClassName = NopColumnClassDefaults.CenterAll + " passenger-grid-header-vertical",
                                    Render = new RenderBoolean()
                                });
                                gridModel.ColumnCollection.Add(new ColumnProperty(nameof(PassengerModel.IsEmployed))
                                {
                                    Title = T("Admin.Passengers.Fields.IsEmployed").Text,
                                    Width = "50",
                                    ClassName = NopColumnClassDefaults.CenterAll + " passenger-grid-header-vertical",
                                    Render = new RenderBoolean()
                                });
                                gridModel.ColumnCollection.Add(new ColumnProperty(nameof(PassengerModel.Id))
                                {
                                    Title = T("Admin.Common.Edit").Text,
                                    Width = "80",
                                    ClassName = NopColumnClassDefaults.Button,
                                    Render = new RenderButtonEdit(new DataUrl("~/Admin/Passenger/Edit"))
                                });
                            }
                            @await Html.PartialAsync("Table", gridModel)
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</form>

@*export selected (Excel). We don't use GET approach because it's limited to 2K-4K chars and won't work for large number of entities*@
<form asp-controller="Passenger" asp-action="ExportExcelSelected" method="post" id="export-excel-selected-form">
    <input type="hidden" id="selectedIds" name="selectedIds" value="" />
</form>
<script>
    $(function() {
        $('#exportexcel-selected').click(function (e) {
            e.preventDefault();
            var ids = selectedIds.join(",");
            if (!ids) {
                $('#exportExcelSelected-info').text("@T("Admin.Passengers.NoPassengers")");
                $("#exportExcelSelected").trigger("click");
            }
            else {
                $('#export-excel-selected-form #selectedIds').val(ids);
                $('#export-excel-selected-form').submit();
                updateTable('#passengers-grid');
            }
            return false;
        });
    });
</script>
<nop-alert asp-alert-id="exportExcelSelected" />

<script>
    function renderPassengerPicture(data, type, row, meta) {
        if (!data) {
            return '';
        }

        var fullUrl = row.PictureFullSizeUrl || data;
        return '<a href="' + fullUrl + '" target="_blank" class="text-primary">نمایش فرم</a>';
    }

    $(document).ready(function () {
        var citySelect = $("#@Html.IdFor(model => model.SearchCityId)");
        var agencySelect = $("#@Html.IdFor(model => model.SearchAgencyId)");
        var agenciesUrl = "@Url.Action("GetAgenciesByCityId", "Passenger")";
        var clinicsUrl = "@Url.Action("GetClinicsByCityId", "Passenger")";
        var defaultAgencyText = "@T("Admin.Common.Select")";
        var defaultClinicText = "@T("Admin.Common.Select")";
        var clinicSelect = $("#@Html.IdFor(model => model.SearchClinicId)");

        var searchRecoveryNoInput = $("#@Html.IdFor(model => model.SearchRecoveryNo)");
        if (searchRecoveryNoInput.val() === "0") {
            searchRecoveryNoInput.val("");
        }

        //initialize select2 for searchable dropdowns
        citySelect.select2({ dir: 'rtl', width: '100%' });
        agencySelect.select2({ dir: 'rtl', width: '100%' });
        clinicSelect.select2({ dir: 'rtl', width: '100%' });

        function loadAgencies(cityId, selectedAgencyId) {
            agencySelect.empty();
            agencySelect.append($("<option></option>").attr("value", "0").text(defaultAgencyText));

            if (!cityId || cityId === "0") {
                agencySelect.trigger('change.select2');
                return;
            }

            $.getJSON(agenciesUrl, { cityId: cityId }, function (data) {
                $.each(data, function (index, item) {
                    var option = $("<option></option>").attr("value", item.id).text(item.name);
                    if (selectedAgencyId && selectedAgencyId.toString() === item.id.toString()) {
                        option.attr("selected", "selected");
                    }
                    agencySelect.append(option);
                });
                agencySelect.trigger('change.select2');
            });
        }

        function loadClinics(cityId, selectedClinicId) {
            clinicSelect.empty();
            clinicSelect.append($("<option></option>").attr("value", "0").text(defaultClinicText));

            if (!cityId || cityId === "0") {
                clinicSelect.trigger('change.select2');
                return;
            }

            $.getJSON(clinicsUrl, { cityId: cityId }, function (data) {
                $.each(data, function (index, item) {
                    var option = $("<option></option>").attr("value", item.id).text(item.name);
                    if (selectedClinicId && selectedClinicId.toString() === item.id.toString()) {
                        option.attr("selected", "selected");
                    }
                    clinicSelect.append(option);
                });
                clinicSelect.trigger('change.select2');
            });
        }

        citySelect.on("change", function () {
            loadAgencies($(this).val(), 0);
            loadClinics($(this).val(), 0);
        });

        if (citySelect.val() && citySelect.val() !== "0") {
            loadAgencies(citySelect.val(), agencySelect.val());
            loadClinics(citySelect.val(), clinicSelect.val());
        }
    });
</script>

