@model CityModel

@if (Model.Id > 0)
{
    <div class="card-body">
        @await Html.PartialAsync("Table", new DataTablesModel
        {
            Name = "clinics-grid",
            UrlRead = new DataUrl("Clinics", "City", new RouteValueDictionary { [nameof(ClinicSearchModel.CityId)] = Model.ClinicSearchModel.CityId }),
            UrlDelete = new DataUrl("ClinicDelete", "City", null),
            Length = Model.ClinicSearchModel.PageSize,
            LengthMenu = Model.ClinicSearchModel.AvailablePageSizes,
            ColumnCollection = new List<ColumnProperty>
            {
                new ColumnProperty(nameof(ClinicModel.Name))
                {
                    Title = T("Admin.Configuration.Cities.Clinics.Fields.Name").Text,
                    Width = "300"
                },
                new ColumnProperty(nameof(ClinicModel.Published))
                {
                    Title = T("Admin.Configuration.Cities.Clinics.Fields.Published").Text,
                    Width = "100",
                    ClassName = NopColumnClassDefaults.CenterAll,
                    Render = new RenderBoolean()
                },
                new ColumnProperty(nameof(ClinicModel.DisplayOrder))
                {
                    Title = T("Admin.Configuration.Cities.Clinics.Fields.DisplayOrder").Text,
                    Width = "100",
                    ClassName =  NopColumnClassDefaults.CenterAll
                },
                new ColumnProperty(nameof(ClinicModel.Id))
                {
                    Title = T("Admin.Common.Edit").Text,
                    Width = "100",
                    ClassName = NopColumnClassDefaults.Button,
                    Render = new RenderCustom("renderClinicColumnEdit")
                },
                new ColumnProperty(nameof(ClinicModel.Id))
                {
                    Title = T("Admin.Common.Delete").Text,
                    Width = "100",
                    Render = new RenderButtonRemove(T("Admin.Common.Delete").Text),
                    ClassName = NopColumnClassDefaults.Button
                }
            }
        })
    </div>
    <div class="card-footer">
        <div width="100%">
            <button type="submit" id="btnAddNewClinic"
                    onclick="javascript:OpenWindow('@(Url.Action("ClinicCreatePopup", "City", new { cityId = Model.Id, btnId = "btnRefreshClinics", formId = "city-form" }))', 800, 450, true); return false;"
                    class="btn btn-primary">
                @T("Admin.Configuration.Cities.Clinics.AddNew")
            </button>
            <button type="submit" id="btnRefreshClinics" style="display: none"></button>
            <script>
                $(function() {
                    $('#btnRefreshClinics').click(function () {
                        //refresh grid
                        updateTable('#clinics-grid');

                        //return false to don't reload a page
                        return false;
                    });
                });
            </script>
        </div>
    </div>
}
else
{
    <div class="card-body">
        @T("Admin.Configuration.Cities.Clinics.SaveBeforeEdit")
    </div>
}

<script>
    function renderClinicColumnEdit(data, type, row, meta) {
        return '<button onclick="javascript:OpenWindow(\'@Url.Content("~/Admin/City/ClinicEditPopup/")' + data + '?btnId=btnRefreshClinics&formId=city-form\', 800, 400, true); return false;" class="btn btn-default"><i class="fas fa-pencil"></i>@T("Admin.Common.Edit").Text</button>';
    }
</script>

